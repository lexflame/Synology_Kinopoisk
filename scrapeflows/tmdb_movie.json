{
  "type": "movie",
  "site": "themoviedb",
  "doh_enabled": true,
  "config": {
    "apikey": {
      "icon": "key",
      "name": "API Key"
    }
  },
  "steps": [
    {
      "retval": {
        "ifempty": "apikey"
      }
    },
    {
      "doh": {
        "host": "api.tmdb.org"
      }
    },
    {
      "http": {
        "url": "https://api.tmdb.org/3/search/movie?api_key={apikey}&language={lang}&query={title}&year={year}&page=1",
        "method": "GET",
        "headers": {
          "Accept": "application/json"
        },
        "timeout": 20,
        "result": "metadata"
      }
    },
    {
      "collect": {
        "source": "metadata",
        "into": {
          "ids": "['xp_texts', './results//id']"
        }
      }
    },
    {
      "loop": {
        "source": "ids",
        "item": "id",
        "steps": [
          {
            "http": {
              "url": "https://api.tmdb.org/3/movie/{id}?api_key={$parent[apikey]}&language={$parent[lang]}&append_to_response=credits,release_dates",
              "method": "GET",
              "headers": {
                "Accept": "application/json"
              },
              "timeout": 20,
              "result": "subject"
            }
          },
          {
            "collect": {
              "source": "subject",
              "into": {
                "movie": {
                  "title": "['xp_text', './title']",
                  "tagline": "['xp_text', './tagline']",
                  "original_available": "['xp_text', './release_date']",
                  "summary": "['xp_text', './overview']",
                  "certificate": "['re_match', '\"release_dates\":.*?\"US\".*?\"certification\":\"([^\"]*?)\"']",
                  "genre": "['xp_texts', './genres//name']",
                  "actor": "['xp_texts', './credits/cast//name']",
                  "writer": "['re_matches', '\"name\":\"([^\"]*?)\"[^{{}}]*?\"department\":\"Writing\"']",
                  "director": "['re_matches', '\"name\":\"([^\"]*?)\"[^{{}}]*?\"department\":\"Directing\"']",
                  "extra": {
                    "themoviedb": {
                      "poster": [
                        "['xp_text', './poster_path', 'prefix', 'https://image.tmdb.org/t/p/w500']"
                      ],
                      "backdrop": [
                        "['xp_text', './backdrop_path', 'prefix', 'https://image.tmdb.org/t/p/original']"
                      ],
                      "reference": {
                        "themoviedb": "['xp_text', './id', 'int']",
                        "imdb": "['xp_text', './imdb_id']"
                      },
                      "collection_id": {
                        "themoviedb": "['xp_text', './belongs_to_collection/id', 'int']"
                      }
                    }
                  }
                },
                "rating": "['xp_text', './vote_average', 're_sub', '(\\d+\\.\\d)\\d*', '\\\\1']"
              }
            }
          },
          {
            "collect": {
              "source": "rating",
              "into": {
                "movie": {
                  "extra": {
                    "themoviedb": {
                      "rating": {
                        "themoviedb": "['re_match', '(.*)', 'float']"
                      }
                    }
                  }
                }
              }
            }
          },
          {
            "retval": {
              "source": "movie"
            }
          }
        ]
      }
    }
  ]
}