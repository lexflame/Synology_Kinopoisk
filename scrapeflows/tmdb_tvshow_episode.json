{
  "type": "tvshow_episode",
  "site": "themoviedb.org",
  "doh_enabled": true,
  "config": {
    "apikey": {
      "icon": "key",
      "name": "API Key"
    }
  },
  "steps": [
    {
      "retval": {
        "ifempty": "apikey"
      }
    },
    {
      "doh": {
        "host": "api.tmdb.org"
      }
    },
    {
      "http": {
        "url": "https://api.tmdb.org/3/search/tv?api_key={apikey}&language={lang}&query={title}&year={year}&page=1",
        "method": "GET",
        "headers": {
          "Accept": "application/json"
        },
        "timeout": 20,
        "result": "metadata"
      }
    },
    {
      "collect": {
        "source": "metadata",
        "into": {
          "ids": "['xp_texts', './results//id']"
        }
      }
    },
    {
      "loop": {
        "source": "ids",
        "item": "id",
        "steps": [
          {
            "http": {
              "url": "https://api.tmdb.org/3/tv/{id}?api_key={$parent[apikey]}&language={$parent[lang]}&append_to_response=content_ratings,external_ids",
              "method": "GET",
              "headers": {
                "Accept": "application/json"
              },
              "timeout": 20,
              "result": "subject"
            }
          },
          {
            "collect": {
              "source": "subject",
              "into": {
                "episode": {
                  "title": "['xp_text', './name']",
                  "certificate": "['re_match', '\"content_ratings\":.*?\"US\".*?\"rating\":\"([^\"]*?)\"']",
                  "genre": "['xp_texts', './genres//name']",
                  "extra": {
                    "[plugin_id]": {
                      "tvshow": {
                        "title": "['xp_text', './name']",
                        "original_available": "['xp_text', './first_air_date']",
                        "summary": "['xp_text', './overview']",
                        "extra": {
                          "[plugin_id]": {
                            "poster": [
                              "['xp_text', './poster_path', 'prefix', 'https://image.tmdb.org/t/p/w500']"
                            ],
                            "backdrop": [
                              "['xp_text', './backdrop_path', 'prefix', 'https://image.tmdb.org/t/p/original']"
                            ]
                          }
                        }
                      },
                      "reference": {
                        "themoviedb_tv": "['xp_text', './id', 'int']",
                        "imdb": "['xp_text', './external_ids/imdb_id']"
                      }
                    }
                  }
                }
              }
            }
          },
          {
            "http": {
              "url": "https://api.tmdb.org/3/tv/{id}/season/{$parent[season]}/episode/{$parent[episode]}?api_key={$parent[apikey]}&language={$parent[lang]}&append_to_response=credits",
              "method": "GET",
              "headers": {
                "Accept": "application/json"
              },
              "timeout": 20,
              "result": "subject"
            }
          },
          {
            "collect": {
              "source": "subject",
              "into": {
                "episode": {
                  "tagline": "['xp_text', './name']",
                  "season": "['xp_text', './season_number', 'int']",
                  "episode": "['xp_text', './episode_number', 'int']",
                  "original_available": "['xp_text', './air_date']",
                  "summary": "['xp_text', './overview']",
                  "actor": "['xp_texts', './credits/cast//name']",
                  "writer": "['re_matches', '\"department\":\"Writing\"[^{{}}]*?\"name\":\"([^\"]*?)\"']",
                  "director": "['re_matches', '\"department\":\"Directing\"[^{{}}]*?\"name\":\"([^\"]*?)\"']",
                  "extra": {
                    "[plugin_id]": {
                      "poster": [
                        "['xp_text', './still_path', 'prefix', 'https://image.tmdb.org/t/p/w500']"
                      ]
                    }
                  }
                },
                "rating": "['xp_text', './vote_average', 're_sub', '(\\d+\\.\\d)\\d*', '\\\\1']"
              }
            }
          },
          {
            "collect": {
              "source": "subject",
              "into": {
                "episode": {
                  "actor": "['xp_texts', './credits/guest_stars//name']"
                }
              }
            }
          },
          {
            "collect": {
              "source": "rating",
              "into": {
                "episode": {
                  "extra": {
                    "[plugin_id]": {
                      "rating": {
                        "[plugin_id]": "['re_match', '(.*)', 'float']"
                      }
                    }
                  }
                }
              }
            }
          },
          {
            "retval": {
              "source": "episode"
            }
          }
        ]
      }
    }
  ]
}